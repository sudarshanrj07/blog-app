<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('./partials/head') %>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Homepage</title>
		<!-- Bootstrap CSS -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
			rel="stylesheet"
		/>
		<!-- Optional: You can also use a custom CSS file to make adjustments -->
		<style>
			/* Dark theme background */
			body {
				background-color: #121212;
				color: #fff;
			}

			.container {
				background-color: #1e1e1e;
				padding: 30px;
				border-radius: 10px;
				box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.3);
			}

			.form-label,
			.form-text,
			.btn-primary {
				color: #fff;
			}

			.form-control {
				background-color: #333;
				border-color: #444;
				color: #fff;
			}

			.form-control:focus {
				background-color: #444;
				border-color: #007bff;
				box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
			}

			.btn-primary {
				background-color: #007bff;
				border-color: #007bff;
				transition: background-color 0.3s ease, transform 0.3s ease;
			}

			.btn-primary:hover {
				background-color: #0056b3;
				border-color: #004085;
				transform: scale(1.05);
			}

			.form-control::placeholder {
				color: #bbb;
			}

			.img-fluid {
				max-width: 100%;
				height: auto;
			}

			.card-title {
				font-size: 1.5rem;
				font-weight: bold;
			}

			.alert {
				background-color: #ff4d4d;
				color: white;
				border-radius: 5px;
			}

			/* Hover effect for form inputs */
			.form-control:hover,
			.form-control:focus {
				background-color: #444;
				border-color: #007bff;
			}

			/* Image preview style */
			#imagePreviewContainer {
				margin-top: 20px;
				text-align: center;
			}

			#imagePreview {
				max-width: 100%;
				height: auto;
				border-radius: 10px;
			}

			/* Form control labels */
			label {
				font-size: 1.1rem;
				font-weight: 500;
			}
		</style>
	</head>

	<body>
		<%- include('./partials/nav') %>

		<div class="container mt-4">
			<h2 class="mb-4 text-center">Create a New Blog</h2>

			<!-- Form starts here -->
			<form
				action="/api/blog"
				method="post"
				enctype="multipart/form-data"
				id="blogForm"
			>
				<div class="mb-3">
					<label for="coverImageUrl" class="form-label">Cover Image</label>
					<input
						type="file"
						class="form-control"
						id="coverImageUrl"
						name="coverImageUrl"
						accept="image/*"
						required
					/>
					<small id="coverImageUrlHelp" class="form-text text-muted"
						>Choose a cover image for your blog post.</small
					>
					<div id="imagePreviewContainer" class="mt-3" style="display: none">
						<h5>Image Preview:</h5>
						<img
							id="imagePreview"
							src=""
							alt="Cover Image Preview"
							class="img-fluid"
						/>
					</div>
				</div>

				<div class="mb-3">
					<label for="title" class="form-label">Title</label>
					<input
						type="text"
						class="form-control"
						id="title"
						name="title"
						placeholder="Enter a catchy title"
						required
					/>
					<div id="titleHelp" class="form-text">
						Enter a catchy title for your blog post.
					</div>
				</div>

				<div class="mb-3">
					<label for="body" class="form-label">Body</label>
					<textarea
						class="form-control"
						id="body"
						name="body"
						rows="5"
						placeholder="Write the content of your blog here..."
						required
					></textarea>
					<div id="bodyHelp" class="form-text">
						Write the content of your blog here.
					</div>
				</div>

				<div class="mb-3">
					<button type="submit" class="btn btn-primary w-100">Submit</button>
				</div>
			</form>
			<!-- Form ends here -->
		</div>

		<%- include('./partials/scripts') %>

		<!-- Bootstrap JS (with Popper for dropdowns) -->
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

		<!-- Custom JS for image preview functionality -->
		<script>
			// Image preview functionality
			document
				.getElementById("coverImageUrl")
				.addEventListener("change", function (e) {
					const file = e.target.files[0];
					const imagePreviewContainer = document.getElementById(
						"imagePreviewContainer"
					);
					const imagePreview = document.getElementById("imagePreview");

					if (file) {
						const reader = new FileReader();
						reader.onload = function (event) {
							imagePreview.src = event.target.result;
							imagePreviewContainer.style.display = "block"; // Show preview container
						};
						reader.readAsDataURL(file);
					} else {
						imagePreviewContainer.style.display = "none"; // Hide preview container if no file selected
					}
				});
		</script>
	</body>
</html>
